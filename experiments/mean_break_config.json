{
  "experiment_name": "Mean Break Monte Carlo Study",
  "description": "Evaluate forecasting methods under single and multiple mean breaks in AR(1) processes",
  "version": "1.0.0",
  "scenarios": [
    {
      "name": "Single mean break - moderate",
      "task": "mean",
      "T": 400,
      "Tb": 200,
      "mu0": 0.0,
      "mu1": 2.0,
      "phi": 0.6,
      "sigma": 1.0
    },
    {
      "name": "Single mean break - large",
      "task": "mean",
      "T": 400,
      "Tb": 200,
      "mu0": 0.0,
      "mu1": 4.0,
      "phi": 0.6,
      "sigma": 1.0
    },
    {
      "name": "Single mean break - early",
      "task": "mean",
      "T": 400,
      "Tb": 100,
      "mu0": 0.0,
      "mu1": 2.0,
      "phi": 0.6,
      "sigma": 1.0
    },
    {
      "name": "Single mean break - late",
      "task": "mean",
      "T": 400,
      "Tb": 300,
      "mu0": 0.0,
      "mu1": 2.0,
      "phi": 0.6,
      "sigma": 1.0
    }
  ],
  "simulation_settings": {
    "n_sim": 200,
    "horizon": 20,
    "seed": 42
  },
  "methods": [
    "global_ar1",
    "rolling_ar1",
    "break_dummy_oracle",
    "estimated_break_grid",
    "markov_switching"
  ],
  "window_sizes": [20, 50, 100, 150, 200],
  "metrics": ["rmse", "mae", "bias", "coverage_80", "coverage_95", "log_score"]
}
